<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.AddBookController">
   <children>
      <ImageView fitHeight="119.0" fitWidth="176.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/Minty.png" />
         </image>
      </ImageView>
      <Text fill="#c9e265" layoutX="384.0" layoutY="66.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add BOOK" textAlignment="CENTER">
         <font>
            <Font size="32.0" />
         </font>
      </Text>
      <JFXTextField fx:id="title" focusColor="#d9d9d9" layoutX="253.0" layoutY="107.0" prefHeight="50.0" prefWidth="180.0" promptText="title" unFocusColor="#c9e265" />
      <JFXTextField fx:id="desc" focusColor="#d9d9d9" layoutX="500.0" layoutY="270.0" prefHeight="50.0" prefWidth="180.0" promptText="description" unFocusColor="#c9e265" />
      <JFXTextField fx:id="price" focusColor="#d9d9d9" layoutX="490.0" layoutY="107.0" prefHeight="50.0" prefWidth="180.0" promptText="price" unFocusColor="#c9e265" />
      <JFXTextField fx:id="quantity" focusColor="#d9d9d9" layoutX="490.0" layoutY="190.0" prefHeight="50.0" prefWidth="180.0" promptText="quantity" unFocusColor="#c9e265" />
      <JFXTextField fx:id="pub_date" focusColor="#d9d9d9" layoutX="253.0" layoutY="270.0" prefHeight="50.0" prefWidth="180.0" promptText="publish date" unFocusColor="#c9e265" />
      <JFXTextField fx:id="nbr_page" focusColor="#d9d9d9" layoutX="253.0" layoutY="190.0" prefHeight="50.0" prefWidth="180.0" promptText="nombre de pages" unFocusColor="#c9e265" />
      <ComboBox fx:id="author" layoutX="253.0" layoutY="352.0" prefHeight="50.0" prefWidth="180.0" promptText="author" style="-fx-background-color: #c9e265;" />
      <ComboBox fx:id="langue" layoutX="253.0" layoutY="436.0" prefHeight="50.0" prefWidth="180.0" promptText="langue" style="-fx-background-color: #c9e265;" />
      <ComboBox fx:id="category" layoutX="490.0" layoutY="352.0" prefHeight="50.0" prefWidth="180.0" promptText="category" style="-fx-background-color: #c9e265;">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </ComboBox>
      <ComboBox fx:id="serie" layoutX="490.0" layoutY="439.0" prefHeight="50.0" prefWidth="180.0" promptText="serie" style="-fx-background-color: #c9e265;" />
      <JFXButton fx:id="jbtnAddBook" layoutX="370.0" layoutY="522.0" onAction="#AddBookAction" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: #a6a6a6; -fx-border-color: #a0a2ab;" text="Add book" textFill="#ffffff8c">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </JFXButton>
      <ImageView fx:id="gif" fitHeight="53.0" fitWidth="65.0" layoutX="575.0" layoutY="520.0" pickOnBounds="true" preserveRatio="true">
