      </Text>
      <JFXTextField fx:id="title" focusColor="#d9d9d9" layoutX="191.0" layoutY="107.0" prefHeight="25.0" prefWidth="184.0" promptText="title" unFocusColor="#c9e265" />
      <JFXTextField fx:id="desc" focusColor="#d9d9d9" layoutX="500.0" layoutY="273.0" prefHeight="25.0" prefWidth="172.0" promptText="description" unFocusColor="#c9e265" />
