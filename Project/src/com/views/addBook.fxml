            <Image url="@../img/loading-waiting.gif" />
         </image>
      </ImageView>
      <ImageView fx:id="bookCoverImg" fitHeight="241.0" fitWidth="184.0" layoutX="60.0" layoutY="107.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/python_scripting_for_computational_science_1532400903_6626d084_progressive.jpg" />
         </image>
      </ImageView>
      <Button layoutX="89.0" layoutY="371.0" mnemonicParsing="false" onAction="#onUploadClicked" prefHeight="39.0" prefWidth="92.0" style="-fx-background-color: #c9e265;" text="Upload" textFill="WHITE">
